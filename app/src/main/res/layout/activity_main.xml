<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cost_of_service"
        android:textColor="@color/design_default_color_error" />

    <EditText
        android:id="@+id/et_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="100.00"
        android:inputType="numberDecimal"
        android:text="" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textView2"
        android:textColor="@color/design_default_color_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip %"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        
        <Button
            android:id="@+id/b_tip_minus"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textColor="#539165"
            android:textSize="32sp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_tip"
            android:textColor="@color/design_default_color_error"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="0%"/>

        <Button
            android:id="@+id/b_tip_plus"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textColor="#539165"
            android:textSize="32sp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/b_calculate"
        android:layout_marginTop="20dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#539165"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate" />

    <TextView
        android:id="@+id/textView4"
        android:layout_marginTop="20dp"
        android:textColor="@color/design_default_color_error"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip" />

    <TextView
        android:id="@+id/tv_tip_output"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press Calculate" />
    <TextView
        android:id="@+id/textView5"
        android:layout_marginTop="20dp"
        android:textColor="@color/design_default_color_error"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total" />

    <TextView
        android:id="@+id/tv_total_output"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press Calculate" />

</LinearLayout>